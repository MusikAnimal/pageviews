                &mdash;
                = $I18N->msg( 'massviews-pagepile-description', [ 'variables' => [ "<a target='_blank' href='//tools.wmflabs.org/pagepile'>PagePile</a>" ] ] ) . '.'
                = $I18N->msg( 'faq-massviews-sources-pagepile', [ 'variables' => [ $pagePileLink ] ] )
              %li
                - $subpagesLink = "<a href='https://en.wikipedia.org/wiki/User:Jimbo_Wales'>https://en.wikipedia.org/wiki/User:Example</a>"
                %i= $I18N->msg( 'subpages' )
                &mdash;
                = $I18N->msg( 'massviews-subpages-description', [ 'variables' => [ "<a target='_blank' href='https://www.mediawiki.org/wiki/Special:MyLanguage/Help:Subpages'>" . strtolower( $I18N->msg( 'subpages' ) . "</a>" ) ] ] ) . '.'
                = $I18N->msg( 'faq-massviews-sources-subpages', [ 'variables' => [ $subpagesLink ] ] )
              %li
                - $templateLink = "<a href='https://en.wikipedia.org/wiki/Template:Infobox_Olympic_games'>https://en.wikipedia.org/wiki/Template:Infobox_Olympic_games</a>"
                %i= $I18N->msg( 'transclusions' )
                &mdash;
                = $I18N->msg( 'massviews-transclusions-description', [ 'variables' => [ 'https://www.mediawiki.org/wiki/Special:MyLanguage/Help:Transclusion' ] ] ) . '.'
                = $I18N->msg( 'faq-massviews-sources-template', [ 'variables' => [ $templateLink ] ] )
              %li
                - $linkSearchLink = "<a href='https://en.wikipedia.org/wiki/Special:LinkSearch/*.nycgo.com'>*.nycgo.com</a>"
                - $docLink = "<a target='_blank' href='https://www.mediawiki.org/wiki/Help:Links#External_links'>" . strtolower( $I18N->msg( 'external-link' ) ) . "</a>"
                - $linkSearchDocLink = "<a target='_blank' href='https://www.mediawiki.org/wiki/Special:MyLanguage/Help:Linksearch'>" . $I18N->msg( 'documentation' ) . "</a>"
                %i= $I18N->msg( 'external-link' )
                &mdash;
                = $I18N->msg( 'massviews-external-link-description', [ 'variables' => [ $docLink ] ] ) . '.'
                = $I18N->msg( 'faq-massviews-sources-external-link', [ 'variables' => [ $linkSearchLink, $linkSearchDocLink ] ] )
