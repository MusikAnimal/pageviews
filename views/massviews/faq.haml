          %li.list-group-item(id="category_subject_toggle")
            %p
              %strong= $I18N->msg( 'faq-massviews-subject-page-title', [ 'variables' => [ $I18N->msg( 'category-subject-toggle' ) ] ] )
            %p
              = $I18N->msg( 'faq-massviews-subject-page-body' )
