                &mdash;
                = $I18N->msg( 'massviews-category-description', [ 'variables' => [ "<a target='_blank' href='https://www.mediawiki.org/wiki/Special:MyLanguage/Help:Categories'>" . strtolower( $I18N->msg( 'category' ) ) . "</a>" ] ] ) . '.'
                = $I18N->msg( 'faq-massviews-sources-category', [ 'variables' => [ $categoryLink ] ] )
              %li
                - $wikilinksLink = "<a href='https://en.wikipedia.org/wiki/Book:New_York_City' target='_blank'>https://en.wikipedia.org/wiki/Book:New_York_City</a>"
                %i= $I18N->msg( 'wikilinks' )
                &mdash;
                = $I18N->msg( 'massviews-wikilinks-description', [ 'variables' => [ 'https://www.mediawiki.org/wiki/Special:MyLanguage/Help:Wikilinks' ] ] ) . '.'
