                %i= $I18N->msg( 'hashtag' )
                &mdash;
                = $I18N->msg( 'massviews-hashtag-description', [ 'variables' => [ $hashtagCredits, "<a target='_blank' href='//tools.wmflabs.org/hashtags/docs'>" . strtolower( $I18N->msg( 'hashtag' ) ) . "</a>" ] ] ) . '.'
