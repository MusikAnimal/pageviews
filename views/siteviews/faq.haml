- require_once __DIR__ . '/../../../config.php'
- $currentApp = 'siteviews'
!!!
%html
  %head
    - include '../../_head.php'
    %title
      = $I18N->msg( 'siteviews-title' ) . ' - ' . $I18N->msg( 'faq' )
  %body(class="#{$rtl}")
    - include '../../_header.php'

    %div.container
      %header.col-lg-12.text-center
        %h4
          %strong
            = $I18N->msg( 'siteviews-title' )
          %small.app-description
            = $I18N->msg( 'faq' )

      %main.col-lg-10.col-lg-offset-1
        %ul.list-group
          - include "../../faq_parts/_old_data.php"
          - include "../../faq_parts/_todays_data.php"
          - include "../../faq_parts/_anomaly.php"
          %li.list-group-item(id="metric")
            %p
              %strong= $I18N->msg( 'faq-source-title' )
            %ul.faq-ul
              %li
                %i= $I18N->msg( 'pageviews' )
                = $I18N->msg( 'faq-source-pageviews' )
              %li
                %i= $I18N->msg( 'unique-devices' )
                = $I18N->msg( 'faq-source-unique-devices' )
              %li
                %i= $I18N->msg( 'pagecounts-legacy' )
                = $I18N->msg( 'faq-source-pagecounts' )
          - include "../../faq_parts/_counts.php"
          - include "../../faq_parts/_date_dot.php"
          - include "../../faq_parts/_chart_type.php"
          %li.list-group-item
            %p
              %strong= $I18N->msg( 'faq-top-viewed-title' )
            %p
              = $I18N->msg( 'faq-try-tool', array( 'variables' => array( "<a href='/topviews'>" . $I18N->msg( 'topviews-title' ) . "</a>" ), 'parsemag' => true ) )
          - include "../../faq_parts/_feedback.php"

        %div.col-lg-12.text-center.tm
          %a(href="/siteviews")
            = $I18N->msg( 'faq-return-to', array( 'variables' => array( $I18N->msg( 'siteviews-title' ) ), 'parsemag' => true ) )

      - include "../../_footer.php"
