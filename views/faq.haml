%html
  %head
    - include '../_head.php'
    %title
      = $I18N->msg( 'title' ) . ' - ' . $I18N->msg( 'faq' )
  %body
    %div.container
      %header.col-lg-12.text-center
        %h4
          %strong
            = $I18N->msg( 'title' )
          %small.app-description
            = $I18N->msg( 'faq' )

      %main.col-lg-10.col-lg-offset-1
        %ul.list-group
          - include "../faq_parts/old_data.php"
          - include "../faq_parts/todays_data.php"
          - include "../faq_parts/search_redirects.php"
          - include "../faq_parts/redirects.php"
          - include "../faq_parts/agents.php"
          - include "../faq_parts/chart_type.php"
          %li.list-group-item
            %p
              %strong= $I18N->msg( 'faq-top-viewed-title' )
            %p
              = $I18N->msg( 'faq-try-tool', array( 'variables' => array( "<a href='/topviews'>" . $I18N->msg( 'topviews-title' ) . "</a>" ), 'parsemag' => true ) )
          %li.list-group-item
            %p
              %strong= $I18N->msg( 'faq-multi-lang-title' )
            %p
              = $I18N->msg( 'faq-try-tool', array( 'variables' => array( "<a href='/langviews'>" . $I18N->msg( 'langviews-title' ) . "</a>" ), 'parsemag' => true ) )
          - include "../faq_parts/feedback.php"

        %div.col-lg-12.text-center.tm
          %a(href="/pageviews")
            = $I18N->msg( 'faq-return-to', array( 'variables' => array( $I18N->msg( 'title' ) ), 'parsemag' => true ) )

        - $currentApp = "pageviews";
        - include "../_footer.php"
